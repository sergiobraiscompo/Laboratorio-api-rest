{
  "name": "bootcamp-backend-lemoncode",
  "type": "module",
  "scripts": {
    "start": "run-p -l type-check:watch start:dev start:local-db",
    "start:dev": "tsx --require dotenv/config --watch src/index.ts",
    "start:console-runners": "tsx --require dotenv/config --watch src/console-runners/index.ts",
    "start:local-db": "docker compose up -d",
    "type-check": "tsc --noEmit --preserveWatchOutput",
    "type-check:watch": "npm run type-check -- --watch",
    "test": "vitest run -c ./config/test/config.ts",
    "test:watch": "vitest watch -c ./config/test/config.ts"
  },
  "imports": {
    "#*": "./src/*"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.7.0",
    "mongoose": "^8.4.4",
    "vi": "^1.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/prompts": "^2.4.9",
    "@types/supertest": "^6.0.3",
    "dotenv": "^16.4.5",
    "npm-run-all": "^4.1.5",
    "prompts": "^2.4.2",
    "supertest": "^7.1.4",
    "tsx": "^4.15.7",
    "typescript": "^5.5.2",
    "vitest": "^3.2.4"
  }
}
